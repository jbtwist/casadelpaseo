{
    "version": 2,
    "builds": [
      {
        "src": "../backend/app.py",
        "use": "@vercel/python"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/index.py"
      },
      {
        "src": "/static/(.*)",
        "dest": "frontend/build/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "backend/templates/index.html"
      }
    ]
  }